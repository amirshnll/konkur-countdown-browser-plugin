{
  "version": "1.0.0",
  "manifest_version": 3,
  "name": "Konkur Countdown",
  "description": "تا ماراتن کنکور چند روز باقی مانده است؟",
  "permissions": [
    "tabs"
  ],
  "host_permissions": [
    "<all_urls>"
  ],
  "action": {
    "default_title": "Konkur Countdown",
    "default_popup": "popup.html",
    "default_icon": {
      "16": "images/logo.png",
      "32": "images/logo.png",
      "48": "images/logo.png"
    }
  },
  "content_scripts": [
    {
      "matches": [
        "<all_urls>"
      ],
      "css": [
        "popup.css"
      ],
      "js": [
        "popup.js"
      ]
    }
  ],
  "icons": {
    "16": "images/logo.png",
    "48": "images/logo.png",
    "128": "images/logo.png"
  }
}